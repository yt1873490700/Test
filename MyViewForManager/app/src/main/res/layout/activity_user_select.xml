<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDEEFF"
    >
    <include
       android:id="@+id/select_title"
        layout="@layout/activity_title"
        />
    <LinearLayout
        android:id="@+id/name_ly"
        android:layout_below="@+id/select_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/tv_cen"
        android:layout_marginLeft="@dimen/text_20"
        android:layout_marginRight="@dimen/text_20"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名:"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            />
        <TextView
            android:id="@+id/input_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:paddingLeft="10dp"
            android:text="点击选择用户"
            android:gravity="center|left"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/time_ly"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/name_ly"
        android:background="@drawable/tv_cen"
        android:layout_marginTop="@dimen/text_20"
        android:layout_marginLeft="@dimen/text_20"
        android:layout_marginRight="@dimen/text_20"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间:"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            />
        <TextView
            android:id="@+id/input_time"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:paddingLeft="10dp"
            android:text="点击选择时间(不选默认查询所有)"
            android:gravity="center|left"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/btn_ly"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/time_ly"
        android:layout_marginTop="@dimen/xtdfxd_col_height"
        android:layout_marginLeft="@dimen/xtdfxd_col_height"
        android:layout_marginRight="@dimen/xtdfxd_col_height"
        android:orientation="horizontal">
            <Button
                android:id="@+id/user_cancle"
                android:layout_height="match_parent"
                android:layout_width="120dp"
                android:background="@drawable/tv_cen1"
                android:text="取消"
                android:textColor="@color/commoninput_hit"
                />
        <Button
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/tv_cen1"
            android:visibility="invisible"
            android:textColor="@color/commoninput_hit"
            />

        <Button
            android:id="@+id/user_next"
            android:layout_height="match_parent"
            android:layout_width="120dp"
            android:background="@drawable/tv_cen2"
            android:text="确定"
            android:textColor="@color/white"
            />

    </LinearLayout>


</RelativeLayout>
