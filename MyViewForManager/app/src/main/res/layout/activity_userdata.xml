<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <RelativeLayout
        android:id="@+id/left"
        android:layout_width="55dp"
        android:layout_height="match_parent"
        android:background="@color/at_dark"
        android:layout_alignParentLeft="true"
        >
        <Button
            android:id="@+id/btn_menu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@mipmap/icon_cor_read_menu"
            />
        <View
            android:id="@+id/divider_view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_below="@+id/btn_menu"
            />

        <ListView
            android:id="@+id/namelist"
            android:layout_below="@+id/divider_view2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/white"
            />
    </RelativeLayout>
    <ListView
        android:background="#DDEEFF"
        android:id="@+id/corpaper_read_paper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:listSelector="#00000000"
        android:layout_toLeftOf="@+id/right"
        android:layout_toRightOf="@+id/left"
        />
    <LinearLayout
        android:id="@+id/tocall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toLeftOf="@+id/right"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/text_10"
        android:layout_marginBottom="@dimen/text_10"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数据异常"
            android:textColor="@color/red"
            android:layout_marginRight="5dp"
            />
        <TextView
            android:layout_marginRight="5dp"
            android:id="@+id/call_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打电话"
            android:padding="@dimen/padding_3"
            android:background="@drawable/red_btn"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/send_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发消息"
            android:padding="@dimen/padding_3"
            android:background="@drawable/red_btn"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/right"
        android:layout_width="90dp"
        android:layout_alignParentRight="true"
        android:layout_height="match_parent"
        android:background="@color/commontitle_bg"
        >

        <TextView
            android:id="@+id/data"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="2018-"
            android:gravity="center"
            android:textColor="@color/white"
            />
        <View
            android:id="@+id/divider_view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_below="@+id/data"
            />
        <ListView
            android:id="@+id/datelist"
            android:layout_below="@+id/divider_view1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_below="@+id/data"
            />

        <Button
            android:layout_below="@+id/datelist"
            android:id="@+id/btn_exit"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@null"
            android:layout_alignParentBottom="true"
            android:text="退出"
            android:textColor="@color/white"/>

    </LinearLayout>

</RelativeLayout>
